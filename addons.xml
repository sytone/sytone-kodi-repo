<addon id="script.audio.party.mode.start" name="Music Party Mode" version="0.1.4" provider-name="sytone">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py">
     <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Starts Music Party Mode.</summary>
    <description lang="en">Starts Music Party Mode, waits for X seconds then switches to full screen visualisation and optionally toggles the fullscreen music info after X seconds. Timeouts can be configured in addon settings, defaults are 5 seconds for each.</description>
    <platform>all</platform>
    <language>en</language>
    <forum>http://forum.xbmc.org/showthread.php?tid=166842</forum>
    <website>http://forum.xbmc.org/showthread.php?tid=166842</website>
    <source>https://github.com/sytone</source>
    <email></email>
  </extension>
</addon>

<addon id="script.netflix.launcher" name="Steam" version="3.1.1" provider-name="sytone">
    <requires>
        <import addon="xbmc.python" version="2.19.0"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>game executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Launches Steam in Big Picture mode from within Kodi.</summary>
        <description lang="en">Launches Steam in BPM from within Kodi - It will close or minimize Kodi, launch Steam in Big Picture mode and when Steam is exited Kodi will restart or maximize, with the option to run programs pre/post Steam. It works with Windows, Linux, OSX and Android. Each OS has different settings available.</description>
        <platform>linux windx osx android</platform>
        <language>en</language>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
        <forum>http://forum.kodi.tv/showthread.php?tid=157499</forum>
        <website>http://forum.kodi.tv/showthread.php?tid=157499</website>
        <source>https://github.com/sytone</source>
        <email></email>
    </extension>
</addon>

